<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loginEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/strongTransparentWhiteColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="loginIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="loginConstraintLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="whiteButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">50dp</item>
        <item name="android:background">@drawable/white_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="defaultInputContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="defaultInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@color/inactiveEditTextBackground</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="defaultText">
        <item name="android:textColor">@color/defaultTextColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="defaultInputBottomLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/bottomLineColor</item>
    </style>

    <style name="registerUserSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:background">@color/spinnerBackground</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="checkboxStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/backgroundColor</item>
        <item name="colorControlActivated">@color/activeOrangeColor</item>
    </style>
</resources>
