<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loginEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/strongTransparentWhiteColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="loginIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="loginConstraintLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="whiteButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:elevation">50dp</item>
        <item name="android:background">@drawable/white_button_background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/backgroundColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
</resources>
